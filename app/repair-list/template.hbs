<div class="col-md-6 col-md-offset-3">

  <form>
    {{input placeholder='Repair Name'
            class='input-group form-control'
            value=car-repairs.repairname}}

    {{input placeholder='Date of repair?'
            class='input-group form-control'
            value=car-repairs.repairdate
            type='date'}}

    {{input placeholder='Suggested date of next repair'
            class='input-group form-control'
            value=car-repairs.suggestedmaintenancedate
            type='date'}}

    {{input placeholder='Repair Cost?'
            class='input-group form-control'
            value=car-repairs.repaircost
            type='decimal'}}

    {{textarea placeholder='Repair Comments'
            class='input-group form-control'
            value=car-repairs.repaircomment}}

    <button type="submit" class="btn btn-primary" {{action "save"}}>Log Repair</button>
    <button {{action 'cancel'}} class="btn btn-default">Cancel</button>

  </form>
</div>
